#!/bin/bash
BRANCHES=$(git branch --merged | grep -E -v '(^\*|master)')
[[ -z "${BRANCHES}" ]] && {
  echo "No branch to delete"
  exit
}
echo "Confirm deletion of the following branches:"
echo "${BRANCHES}"
echo -n "y/n "
[[ ${answer} = 'y' ]] && {
  git branch -d $(echo ${BRANCHES})
read -r answer
}
